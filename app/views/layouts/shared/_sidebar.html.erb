<% if user_signed_in? %>
  <div class='user_profile well'>
    <% if @other_user %>
      <div class='photo'>
        <%= image_tag @other_user.avatar_url(:profile), style: "text-align:center;" %>
      </div>
      <div class='info'>
        <%= @other_user.email %>
      </div>  
      <div id='following_status' class='following_status'>
        <%= render 'layouts/shared/following_status'%>
      </div>
    <% else %>
      <div class='photo'>
        <%= image_tag current_user.avatar_url(:profile), style: "text-align:center;" %>
      </div>
      <div class='info'>
        <%= current_user.email %>
      </div>
      <div class='row-fluid' style='margin-bottom:.5em;margin-top:.5em'>
        <div class='span12 btn'>
          <%= link_to "Followers: #{current_user.followers.size}", followers_user_path(current_user) %>
        </div>
      </div>
      <div class='row-fluid'>
        <div class='span12 btn'>
          <%= link_to "Followings: #{current_user.followings.size}", followings_user_path(current_user) %>
        </div>
      </div>
    <% end %>
  </div>

  <div class='my_posts_widget well'>
    <%= render "layouts/shared/my_communities" %>
  </div>   

  <div class='my_posts_widget well'>
    <%= render "layouts/shared/my_posts" %>
  </div>

  <div class='my_posts_widget well'>
    <%= render "layouts/shared/my_tag_clouds" %>
  </div>


<% else %>
  <div class='user_profile well'>
    <div class="photo">
      <%= image_tag "fallback/profile_default.png" %>
    </div>
    <div class="info">
      <%= link_to "Please sign in,", new_user_session_path %>
      <%= link_to "or sign up!", new_user_registration_path %>
    </div>
  </div>
<% end %>
